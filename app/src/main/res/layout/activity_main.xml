<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:layout_marginBottom="20dp"
      android:layout_marginHorizontal="20dp"
      android:id="@+id/tvNumbers"
      android:layout_gravity="right"
      android:text=""
      android:padding="10dp"
      android:gravity="right"
      android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/tvResult"
        android:layout_gravity="right"
        android:gravity="right"
        android:padding="10dp"
        android:text=""
        android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="AC"
            android:id="@+id/reset"
            />
        <Button
            style="@style/buttonNumber"
            android:text="DEL"
            android:id="@+id/del"
            />
        <Button
            style="@style/buttonNumber"
            />
        <Button
        style="@style/buttonOperation"
            android:text="/"
            android:id="@+id/divide"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="7"
            android:id="@+id/seven"
            />
        <Button
            style="@style/buttonNumber"
            android:text="8"
            android:id="@+id/eight"
            />
        <Button
            style="@style/buttonNumber"
            android:text="9"
            android:id="@+id/nine"
            />
        <Button
        style="@style/buttonOperation"
            android:text="X"
            android:id="@+id/multiply"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="4"
            android:id="@+id/four"
            />
        <Button
            style="@style/buttonNumber"
            android:text="5"
            android:id="@+id/five"
            />
        <Button
            style="@style/buttonNumber"
            android:text="6"
            android:id="@+id/six"
            />
        <Button
            style="@style/buttonOperation"
            android:id="@+id/plus"
            android:text="+"
        />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="1"
            android:id="@+id/one"
            />
        <Button
            style="@style/buttonNumber"
            android:text="2"
            android:id="@+id/two"
            />
        <Button
            style="@style/buttonNumber"
            android:text="3"
            android:id="@+id/three"
            />
        <Button
            style="@style/buttonOperation"
            android:text="-"
            android:id="@+id/minus"
        />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="."
            android:id="@+id/dot"
            />
        <Button
            style="@style/buttonNumber"
            android:text="0"
            android:id="@+id/zero"
            />
        <Button
            style="@style/buttonNumber"
            android:text="="
            android:background="@color/orange"
            android:layout_weight="2"
            android:id="@+id/result"
        />
    </LinearLayout>

</LinearLayout>